{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "app",
    "src",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "tailwind.config.js"
  ],
  "exclude": ["node_modules", "dist"]
}

